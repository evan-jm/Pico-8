-- game loop
function _init()
	menu_active=true
	map_active=false
	
	make_menu()
	make_map()
	make_player()
end

function _update()
	if menu_active then
		move_cursor()
		make_selection()
	elseif map_active then
		move_player()
	end
end

function _draw()
	cls()
	if menu_active then
		draw_menu()
	elseif map_active then
		draw_map()
		draw_player()
	end
end
