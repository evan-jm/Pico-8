end

function draw_player()
	spr(p.sprite,p.x,p.y)
end

function move_player(dir)
	if (btn(⬆️)) p.y-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬅️)) p.x-=1
	if (btn(➡️)) p.x+=1
end
