-- menu
function make_menu()
	selection = {"start", "how to play"}
	current = 1
	menu_active = true
end

function draw_menu()
	cls()
	print("welcome!", 40, 20)
	
	if current == 1 then
		print("➡️ start", 40, 40)
	else
		print("start", 48, 40)
	end

	if current == 2 then
		print("➡️ how to play", 40, 50)
	else
		print("how to play", 48, 50)
	end
end

function move_cursor()
	if (btnp(2)) then -- up
		current -= 1
	end
	if (btnp(3)) then -- down
		current += 1
	end

	-- wrap around
	if current > #selection then
		current = 1
	elseif current < 1 then
		current = #selection
	end
end

function make_selection()
	if btnp(❎) then
		-- if cursor on start, start the game
		if current==1 then
			start_game()
		-- if cursor on how to play, show popup
		elseif current==2 then
			show_how_to_play()
		end
	end
end

function start_game()
	menu_active=false
	map_active=true
end
