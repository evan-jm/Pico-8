-- player
function make_player()
	p={}
	p.x=3
	p.y=3
	p.sprite=1
end

function draw_player()
	spr(p.sprite,p.x,p.y)
end

function move_player(dir)
	if (btn(⬆️)) p.y-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬅️)) p.x-=1
	if (btn(➡️)) p.x+=1
end
