-- map
function make_map()
  for i=0,63 do
    for j=0,63 do
      local cell=64
      if rnd(1)<0.5 then
        cell=65
      end
      mset(i,j,cell)
    end
  end
end

function draw_map()
  camera(p.x-61,p.y-61)
	map(0,0,0,0,128,128)
end
