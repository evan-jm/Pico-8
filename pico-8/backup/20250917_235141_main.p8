-- player
function make_player()
	p={}
	p.x=64
	p.y=100
	p.sprite=0
end

function draw_player()
	spr(p.sprite,p.x,p.y)
end

function move_player(dir)
	if (btn(⬆️)) p.y-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬅️)) p.x-=1
	if (btn(➡️)) p.x+=1
end
